{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0", 
        "title": "servidor",
        "description": "API Rest with node js,express ",
        "license": "ISC"
    },
    "host": "localhost:3000",
    "basePath": "/api/v1/",
    "paths": {
        "/jugadores": {
            "get": {
                "tags": ["Players"],
                "summary": "Get all players in system",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Player"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        }
    },
    "definitions": {
        "Player": {
            "required": ["_id","name","age", "position","team","shirt","image"],
            "properties": {
                "_id": {
                    "type": "integer",
                    "uniqueItems": true
                },

                "name": {
                    "type": "string"
                },
                "age": {
                    "type": "string"
                },
                "position":{
                    "type": "string"
                },
                "team":{
                    "type": "string"
                },
                "shirt": {
                    "type": "integer"
                },
                "image":{
                    "type": "string"
                }
            }
        }
    },
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"]
}

